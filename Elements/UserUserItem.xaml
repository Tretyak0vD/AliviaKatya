<UserControl x:Class="Фотосалон.Elements.UserUserItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Фотосалон.Elements"
                         mc:Ignorable="d" 
                          d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="border" Opacity="1" Margin="10,5,10,5" Height="230" CornerRadius="7" Background="#49373A">
        <Grid>
            <Grid.Resources>
                <ResourceDictionary Source="/Resource/BtnRes.xaml"/>
            </Grid.Resources>
            <Label Content="ФИО: " Foreground="White" x:Name="fio_client" Margin="12,10,239,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Height="35" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
            <Label Content="Адрес эл. почты: " Foreground="White" x:Name="email_client"  Margin="12,50,239,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Height="35" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
            <Label Content="Пароль: " Foreground="White" x:Name="password_client"  Margin="12,90,239,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Height="35" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>

            <Button x:Name="buttonRedac" Content="Изменить" Background="#FFC0CB" FontWeight="Bold" Foreground="White" Style="{StaticResource BtnRedac}"  Margin="0,0,595,49" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right" Width="175" Click="Click_redact"/>
            <Button x:Name="buttonExitAccount" Content="Выйти из аккаунта" Background="#FFC0CB" FontWeight="Bold" Foreground="White" Style="{StaticResource BtnRedac}"  Margin="0,0,390,49" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right" Width="175" Click="Click_exitAccount"/>
        </Grid>
    </Border>
</UserControl>